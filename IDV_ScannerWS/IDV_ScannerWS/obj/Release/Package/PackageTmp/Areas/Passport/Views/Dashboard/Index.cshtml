@section JavaSCR{
    <script>
        function ShowReportList(PageCode, Unread) {
            var BaseUrl = "";
            switch (PageCode) {
                case '1': { BaseUrl = "@Url.Action("Accepted","ReportList")"; break; }
                case '2': { BaseUrl = "@Url.Action("Failed","ReportList")"; break; }
                case '3': { BaseUrl = "@Url.Action("Reffered","ReportList")"; break; }
                case '4': { BaseUrl = "@Url.Action("NoValidation","ReportList")"; break; }
                case '5': { BaseUrl = "@Url.Action("AllDocuments","ReportList")"; break; }
            }
            if (Unread == '1') { BaseUrl = BaseUrl + "/UnRead"; }
            window.location.href = BaseUrl;
        }
    </script>
}